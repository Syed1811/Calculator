<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="@color/black"
        android:textSize="48sp"
        android:text=""
        android:textColor="@color/white"
        android:gravity="end|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >
        <Button
            android:id="@+id/butten7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/butten8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/butten"
            android:onClick="onDigit"
            android:text="8"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/butten9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttendevied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onoperator"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:textColor="@color/white"
        >
        <Button
            android:id="@+id/butten4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/butten5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/butten6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttenmultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onoperator"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="x"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/butten1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/butten2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/butten3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttenminus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onoperator"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/butten0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:layout_margin="3dp"
            android:background="@drawable/butten"
            android:layout_weight="2"
            android:text="0"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttenclear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onClear"
            android:layout_margin="3dp"
            android:background="@drawable/butten"
            android:layout_weight="1"
            android:text="Clear"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/buttenplus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/butten"
            android:onClick="onoperator"
            android:text="+"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/buttenequal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onEqual"
            android:background="@color/equal"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:text="="
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttendot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDecimal"
            android:background="@drawable/butten"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>